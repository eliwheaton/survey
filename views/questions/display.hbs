
<div class="row">
  <div class="col-12">

    {{#if question}}
      <form id="survey" name="survey" method="post" action="/surveys">
        <div class="form-group">
          <h1>{{question.text}}</h1>
        </div>

        {{#each question.answers}}
          <div class="form-group">
            <div class="form-check">
              {{#if ../question.multiple}}
                <input class="form-check-input" type="checkbox" name="answer" id="{{id}}" value="{{id}}">
              {{else}}
                <input class="form-check-input" type="radio" name="answer" id="{{id}}" value="{{id}}">
              {{/if}}
              <label class="form-check-label" for="{{id}}">{{text}}</label>
            </div>
          </div>
        {{/each}}

        <input type="hidden" name="questionId" value="{{question.id}}">
        <input type="hidden" name="questionText" value="{{question.text}}">
        <input type="hidden" name="multiple" value="{{question.multiple}}">
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    {{else}}
      <h2>No more questions! Time to hire Eli!</h2>
    {{/if}}

  </div>
</div>